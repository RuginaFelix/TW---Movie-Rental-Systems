@using MovieRentalSystem.Models.ViewClasses;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Uganda Rental</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="html-layout">
    <header class="navigation-header">
        <h1 class="logo" style="color:#E1F5FA">Uganda Movies</h1>
        <input type="checkbox" id="navigation-toggle" class="navigation-toggle" />
        <nav class="navigation-bar">
            <ul>
                <li>@Html.ActionLink("Movie List", "Index", "Home")</li>
                @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                <li>@Html.ActionLink("My movies", "GoToMyMovies", "Home")</li>
                <li><a href="/Home/GoToCart">Cart(<span class='cart-counter-value'>@GlobalClass.CartCounter</span>)</a></li>
                <li class="logout-button pull-right" style="margin-right: 20px;">@Html.ActionLink("Logout", "Logout", "Login")</li>
            </ul>
        </nav>
        <label for="navigation-toggle" class="navigation-toggle-label">
            <span></span>
        </label>
    </header>

    <div class="container body-content">
        @RenderBody()
    
        <footer></footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/ajaxHelper.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
